extends layout
block append head
	

block content
	div(class="container")
		h1.header The Drunken master
		p.lead Do you got what it takes to become the drunken master? Play to find out! 
		
		
		#alcohol-chart
		//.btn-group(role='group', aria-label='...')
			button.btn.btn-default.btn-start(type='button') Start
			button.btn.btn-default.btn-stop(type='button') Stop
		h3.max-value
		.row
			.col-md-12.form-inline
				.form-group
					label(for="username") Username
					input(type="text", placeholder="Username").form-control#username
					.btn-group(role='group', aria-label='...')
						button.btn.btn-default.btn-start(type='button') Start
					div(style="display:inline-block")
						h4.status-running.collapse Running	
					
		
		.row
			.col-md-6
				h3 Top list
				table.table
					thead
						tr							
							th Username
							th Max
							th Time
							
					tbody#results
						

		
		
block scripts
	script(src="/javascripts/canvasjs.js")
	script(src="/javascripts/jquery.canvasjs.js")
	script(src='/socket.io/socket.io.js')
	script(src="/javascripts/alcohol-chart.js")


	